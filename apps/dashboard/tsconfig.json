{
  "extends": "@travelese/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@travelese/ui": ["../../packages/ui/src"]
    },
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
